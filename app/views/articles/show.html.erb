<h1><%= @article.title %></h1>

<p><%= @article.body %></p>
<br>
<%= link_to "Delete", article_path(@article), data: {
  turbo_method: :delete,
  turbo_confirm: "Are you sure?"
} %>

<br>
<%= link_to "Edit", edit_article_path(@article) %>
<br>
<h1>Comments</h1>
<%= render @article.comments %>
<br>
<h2>New Comment</h2>
<%= render "comments/form", article: @article %>
<br>
<%= link_to "Back to home", articles_path %>
